<div class="position-relative">
  <% if artwork.sold_and_paid? %>
    <div class="sold-ribbon">
      VENDU
    </div>
  <% end %>

  <%= link_to artwork_path(artwork), class: "text-decoration-none text-dark" do %>
    <div class="card card-custom fixed-size">
      <% if artwork.images.attached? %>
        <% primary_image = artwork.images.first %>
        <% secondary_image = artwork.images.second if artwork.images.size > 1 %>

        <% if secondary_image %>
          <div class="image-hover-wrapper">
            <%= image_tag url_for(primary_image), class: "vertical-img primary-img", alt: artwork.title %>
            <%= image_tag url_for(secondary_image), class: "vertical-img secondary-img", alt: "#{artwork.title} - aperçu" %>
          </div>
        <% else %>
          <div class="image-wrapper">
            <%= image_tag url_for(primary_image), class: "vertical-img", alt: artwork.title %>
          </div>
        <% end %>
      <% end %>

      <div class="card-body text-center p-2">
        <h5 class="card-title mb-1" style="font-size: 1rem;"><%= artwork.title %></h5>
        <p class="card-text fw-bold mb-2" style="font-size: 0.9rem;"><%= number_to_currency(artwork.price, unit: "€") %></p>
      </div>
    </div>
  <% end %>
</div>
