<div class="p-5">
  <h1 class="text-center">Boutique - <%= @sub_category.titleize %></h1>

  <div class="mb-3">
    <label for="sort">Trier par :</label>
    <%= form_with url: artworks_category_sub_category_path(@category, @sub_category), method: :get, local: true do %>
      <%= select_tag :sort, options_for_select([['Plus récent', 'recent'], ['Prix croissant', 'price_asc'], ['Prix décroissant', 'price_desc']], params[:sort]), onchange: 'this.form.submit();' %>
    <% end %>
  </div>

  <% if @highlighted_artworks.present? %>
    <div class="row mb-5">
      <% @highlighted_artworks.each do |artwork| %>
        <div class="col-6 col-sm-4 col-md-2 mb-4 d-flex justify-content-center">
          <%= render partial: 'artworks/gallery_item', locals: { artwork: artwork } %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="row">
    <% @artworks.each do |artwork| %>
      <div class="col-6 col-sm-4 col-md-2 mb-4 d-flex justify-content-center">
        <%= render partial: 'artworks/gallery_item', locals: { artwork: artwork } %>
      </div>
    <% end %>
  </div>
</div>
